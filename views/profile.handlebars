<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

 {{#if characters.length}}
  <div class="col-md-6 character-list">
    <h3>Your Character Sheets:</h3>

    {{#each characters as |character|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/character/{{character.id}}">{{character.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{character.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="row mt4">
    <div class="col-md-6">
        <h3>Create a new Character:</h3>

        <form class="form new-character">
            <div class="form-group">
                <label for="new-character">New Character</label>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/profile.js"></script>